---
import AlbumItemCard from '../components/AlbumItemCard.astro';
import HeaderContainer from '../components/HeaderContainer.astro';
import PlaylistCard from '../components/PlaylistCard.astro';
import Layout from '../layouts/Layout.astro';
import { albumsData } from '../lib/albums';
import { artistsData } from "../lib/artist";
import ArtistCard from '../components/ArtistCard.astro';
import AlbumCard from '../components/AlbumCard.astro';
---

<Layout>
	<div id="playlist-container" class="relative min-h-full transition-all duration-300 bg-context p-4" style="--context-color:#134e4a;">
    
		<div class="hidden md:block mb-4">
			<HeaderContainer />
		</div>
		
		
		<div class="relative z-10 space-y-10">
			{/*
			<div>
				<ul class="grid grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-2">
					{albumsData.map((album) => (
						<AlbumItemCard album={album} />
					))}
				</ul>
			</div>
			*/}

			<div>
				<h1 class="text-2xl font-bold">Tus artistas más escuchados</h1>
				<ul class="flex py-4 gap-2 overflow-x-auto">
					{artistsData.map((artist) => (
						<ArtistCard artist={artist} />						
					))}
				</ul>
			</div>

			<div>
				<h1 class="text-2xl font-bold">Álbums para ti</h1>
				<ul class="flex py-4 gap-2 overflow-x-auto">
					{albumsData.map((album) => (
						<AlbumCard album={album} />
					))}
				</ul>
			</div>
			
			
		</div>
	
		<div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/90">
		</div>
	  </div>
</Layout>
