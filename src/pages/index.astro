---
import AlbumItemCard from '../components/AlbumItemCard.astro';
import Layout from '../layouts/Layout.astro';
import { albumsData } from '../lib/albums';
---

<Layout>
	<div id="playlist-container" class="relative h-full transition-all duration-300 bg-context p-4" style="--context-color:#134e4a;">
    
		<div class="relative z-10">
			<ul class="grid grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-2">
				{albumsData.map((album) => (
					<AlbumItemCard album={album} />
				))}
			</ul>
		</div>
	
		<div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/90">
		</div>
	  </div>
</Layout>
